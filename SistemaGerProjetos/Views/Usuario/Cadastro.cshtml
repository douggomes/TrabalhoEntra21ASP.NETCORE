@model SistemaGerProjetos.Models.Usuario;
@{
    Layout = "_Layout";
}

@{
    ViewBag.Title = "Cadastrar-se";
}

<div class="container">
    <form method="post">
        <input type="hidden" name="idusuario" value="@Model.IdUsuario" />
        <input type="hidden" name="role" value="@Model.Role" />
        <div class="form-group">
            <label for="nome">Nome</label>
            <input type="text" name="nomeusuario" value="@Model.NomeUsuario" class="form-control" id="nome" placeholder="Digite o seu nome">
            @Html.ValidationMessage("nome")
        </div>

        <div class="form-group">
            <label for="login">Nome de usuário</label>
            <input type="text" name="login" value="@Model.Login" class="form-control" id="login" placeholder="Digite o seu nome de usuário">
            @Html.ValidationMessage("login")
        </div>

        <div class="form-group">
            <label for="senha">Senha</label>
            <input type="password" name="senha" value="@Model.Senha" class="form-control" id="senha" placeholder="Digite a sua senha">
            @Html.ValidationMessage("senha")
        </div>

        <button type="submit" class="btn btn-primary">Salvar</button>
    </form>

    @if (ViewBag.MensagemErro != null)
    {
        @ViewBag.MensagemErro
    }

</div>