@using Microsoft.AspNetCore.Http;
@model SistemaGerProjetos.Models.Usuario;

@{
    Layout = "_Layout";
}

@{
    ViewBag.Title = "Login";
}

<div class="container">
    <form method="post">
        <div class="form-group mt-3">
            <label for="login">Login</label>
            <input type="text" name="login" value="" class="form-control" id="login" placeholder="Digite o seu login">
            @Html.ValidationMessage("login")
        </div>

        <div class="form-group">
            <label for="senha">Senha</label>
            <input type="password" name="senha" value="" class="form-control" id="senha" placeholder="Digite a sua senha">
            @Html.ValidationMessage("senha")
        </div>
        <button type="submit" class="btn btn-primary">Entrar</button>
    </form>

    @if (ViewBag.MensagemErro != null)
    {
        @ViewBag.MensagemErro
    }
</div>
