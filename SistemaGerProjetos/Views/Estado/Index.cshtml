@using X.PagedList.Mvc.Core;
@using X.PagedList;


@model X.PagedList.IPagedList<SistemaGerProjetos.Models.Estado>
@{
    Layout = "_Layout";
}

@{
    ViewBag.Title = "Lista de Estados";
}

@if (TempData["Mensagem"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["Mensagem"]
    </div>
}

   <p class="h3 mt-3">Lista de Estados</p>

<link href="~/css/PagedList.css" rel="stylesheet" type="text/css" />

<a href="~/estado/cadastrar" class="btn btn-primary mt-3">Cadastrar</a>
<span class="mt-3"><b>Total de Registros:</b>@Model.TotalItemCount</span>

<table class="table table-striped table-bordered table-hover mt-1 ">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Código</th>
            <th scope="col">Nome</th>
            <th scope="col">Sigla</th>
            <th scope="col">Ação</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var estado in Model)
        {
            <tr>
                <td>@estado.Id</td>
                <td>@estado.NomeEstado</td>
                <td>@estado.SiglaEstado</td>
                <td>
                    <a href="/estado/atualizar/@estado.Id" class="btn btn-primary">Editar</a>
                    <a href="/estado/excluir/@estado.Id" class="btn btn-danger">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page }))
